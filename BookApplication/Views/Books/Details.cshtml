@model BookApplication.Models.Book

<div class="container mt-4">
    <h2>Book Details</h2>
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid mb-3" style="max-width: 200px;" />
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            <p class="card-text"><strong>Rating:</strong> @Model.Rating</p>
            <p class="card-text"><strong>Published Date:</strong> @Model.PublishedDate.ToString("MMMM dd, yyyy")</p>
            <p class="card-text"><strong>Status:</strong> @(Model.IsBorrowed ? "Borrowed" : "Available")</p>
            <p class="card-text"><strong>Authors:</strong></p>
            <ul>
                @if (Model.Authors != null && Model.Authors.Any())
                {
                    @foreach (var author in Model.Authors)
                    {
                        <li>@author.FullName</li>
                    }
                }
                else
                {
                    <p>No authors available for this book.</p>
                }
            </ul>
        </div>
    </div>
    <a href="@Url.Action("Index")" class="btn btn-primary">Back to Books List</a>
</div>
